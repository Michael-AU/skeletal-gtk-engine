# Moblin Netbook GTK+ theme

# Colours:
#   green: 66cc33
#   dark gray: cbccc9
#   light gray: eeeeec

gtk_button_images = 0
gtk_menu_images = 0
# blue_l             #a0e4f8
# blue	             #5dcff2
# blue_d             #009bce
# white              #ffffff
# grey               #8d8d8d

gtk_color_scheme = "bg_color:#f9f9f9;fg_color:#2b2b2b;text_color:#2b2b2b;base_color:#fff;selected_bg_color:#31c2ee;selected_fg_color:#fff;grey:#8d8d8d;blue_l:#a0e4f8;blue:#5dcff2;blue_d:#009bce"

style "default"
{

  GtkWidget::cursor-color    = @selected_bg_color
  GtkWidget::secondary-cursor-color = @selected_bg_color

  xthickness = 3
  ythickness = 3

  GtkMenu::vertical_padding = 0
  GtkMenuBar::shadow_type = GTK_SHADOW_NONE

  GtkRange::trough_border = 2
  GtkScrollbar::slider_width = 20
  GtkScrollbar::stepper_size = 20
  GtkScale::slider_length = 23
  GtkScale::slider_width = 14

  GtkProgressBar::xspacing = 0
  GtkProgressBar::yspacing = 0

  GtkButton::default_border = {0, 0, 0, 0}
  # allow for bottom shadow in buttons
  GtkButton::inner-border = { 0, 0, 0, 2 }

  GtkToolbar::internal_padding = 2
  GtkToolbar::shadow_type = GTK_SHADOW_NONE

  GtkCheckButton::indicator_size = 15
  GtkCheckMenuItem::indicator_size = 15


  fg [NORMAL] = @fg_color
  fg [PRELIGHT] = @fg_color
  fg [ACTIVE] = @fg_color
  fg [INSENSITIVE] = shade (2.5, @fg_color)
  fg [SELECTED] = @selected_fg_color

  bg [NORMAL] = @bg_color
  bg [PRELIGHT] = @bg_color
  bg [ACTIVE] = @bg_color
  bg [INSENSITIVE] = darker (@bg_color)
  bg [SELECTED] = @selected_bg_color

  text [NORMAL] = @text_color
  text [PRELIGHT] = @selected_fg_color
  text [SELECTED] = @selected_fg_color
  text [ACTIVE] = @fg_color
  text [INSENSITIVE] = shade (0.5, @base_color)

  base [NORMAL] = @base_color
  base [PRELIGHT] = @base_color
  base [SELECTED] = @selected_bg_color
  base [ACTIVE] = shade (0.9, @bg_color)
  base [INSENSITIVE] = shade (0.9, @base_color)

  engine "moblin-netbook-engine"
  {
    radius = 3
    border[NORMAL] = @grey
    border[PRELIGHT] = @grey
    border[SELECTED] = @grey
    border[ACTIVE] = @grey
    border[INSENSITIVE] = @grey
  }
}

class "GtkWidget" style "default"

style "button"
{
  GtkButton::child-displacement-x = 1
  GtkButton::child-displacement-y = 1
  GtkButton::displace-focus = 1
  GtkButton::inner-border = { 4, 4, 4, 4 }

  GtkWidget::focus-padding = 0
  GtkWidget::focus-line-width = 2

  xthickness = 1
  ythickness = 1

  engine "moblin-netbook-engine"
  {
    radius = 4
    border[PRELIGHT] = @blue_d
    border[ACTIVE] = @blue_d
    shadow = 0.15
  }
}
widget_class "*Button*" style "button"
class "GtkScale" style "button"

style "entry"
{
  xthickness = 3
  ythickness = 3
  engine "moblin-netbook-engine"
  {
    radius = 3
    shadow = 0.15
  }
}
class "GtkEntry" style "entry"

style "checkbutton"
{
  fg [NORMAL] = @fg_color
  fg [PRELIGHT] = @fg_color
  fg [ACTIVE] = @fg_color

  bg [NORMAL] = @bg_color
  bg [PRELIGHT] = @bg_color

  text [NORMAL] = @selected_bg_color
  text [ACTIVE] = @selected_bg_color
  text [PRELIGHT] = @selected_bg_color

  engine "moblin-netbook-engine"
  {
    radius = 2
  }
}
widget_class "*CheckButton*" style "checkbutton"
widget_class "*RadioButton*" style "checkbutton"
widget_class "*ToolButton*" style "checkbutton"

style "menuitem"
{
  fg[PRELIGHT] = @selected_fg_color
  bg[PRELIGHT] = @selected_bg_color

# this is for check box items
  text [NORMAL] = @selected_bg_color
  text [ACTIVE] = @selected_bg_color
  text [PRELIGHT] = @selected_bg_color
}
widget_class "*MenuItem*" style "menuitem"

style "menu"
{
  bg[NORMAL] = lighter (@bg_color)
}
class "GtkMenu" style "menu"

style "progressbar"
{
  xthickness = 0
  ythickness = 0
  bg[NORMAL] = shade (0.9, @bg_color)
  bg[PRELIGHT] = @selected_bg_color
}
class "GtkProgressBar" style "progressbar"

style "scrollbar"
{
  fg[NORMAL] = shade (2.5, @fg_color)
  bg[ACTIVE] = shade (0.9, @bg_color)
  bg[INSENSITIVE] = @bg_color
}
class "GtkScrollbar" style "scrollbar"
class "GtkScale" style "scrollbar"

style "treeview_headers"
{
  bg[NORMAL] = @bg_color
  fg[NORMAL] = @fg_color
}
widget_class "*.GtkTreeView.GtkButton*" style "treeview_headers"

style "toolbar"
{
  bg[NORMAL] = shade (0.98, @bg_color)
  engine "moblin-netbook-engine"
  {
    radius = 0
  }
}
class "GtkToolbar" style "toolbar"

style "menubar"
{
  bg[NORMAL] = "#202e31"
  fg[NORMAL] = "#ffffff"
}
class "GtkMenuBar" style "menubar"
class "GtkToolbar" style "menubar"
class "GtkToolItem" style "menubar"
widget_class "*.GtkMenuBar.*" style "menubar"

style "arrow"
{
  fg[NORMAL] = shade (2.5, @fg_color)
}
class "GtkArrow" style "arrow"

style "combo-box-entry-arrow"
{
  fg[PRELIGHT] = shade (2.5, @fg_color)
  fg[ACTIVE] = shade (2.5, @fg_color)
}
widget_class "*.GtkComboBoxEntry*GtkArrow" style "combo-box-entry-arrow"
widget_class "*.GtkSpinButton" style "combo-box-entry-arrow"

# Work around for http://bugzilla.gnome.org/show_bug.cgi?id=382646
# Note that the work around assumes that the combobox is _not_ in
# appears-as-list mode.
# Similar hack also in the menuitem style.
# This style does not affect GtkComboBoxEntry, it does have an effect
# on comboboxes in appears-as-list mode though.
style "clearlooks-text-is-fg-color-workaround"
{
	text[NORMAL]      = @fg_color
	text[PRELIGHT]    = @fg_color
	text[SELECTED]    = @fg_color
	text[ACTIVE]      = @fg_color
	text[INSENSITIVE] = darker (@bg_color)
}
widget_class "*.<GtkComboBox>.<GtkCellView>"   style "clearlooks-text-is-fg-color-workaround"
style "clearlooks-menuitem-text-is-fg-color-workaround"
{
	text[NORMAL]        = @fg_color
	text[PRELIGHT]      = @selected_fg_color
	text[SELECTED]      = @selected_fg_color
	text[ACTIVE]        = @fg_color
	text[INSENSITIVE]   = darker (@bg_color)
}
widget "*.gtk-combobox-popup-menu.*"   style "clearlooks-menuitem-text-is-fg-color-workaround"

style "notebook"
{
  engine "moblin-netbook-engine"
  {
    radius = 6
  }
}
class "GtkNotebook" style "notebook"

style "mux-banner"
{
  base[NORMAL] = "#eeeeec"
  text[NORMAL] = "#000000"
}
class "MuxBanner" style "mux-banner"

style "mux-frame"
{
  bg[NORMAL]="#ffffff"
}
class "MuxFrame" style "mux-frame"
